{
  "name": "seattle-reuse-exchange",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:load": "turbo run test:load",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "setup:check": "node check-setup.js",
    "setup:env": "echo Please edit .env files with your API keys - see SETUP.md",
    "db:migrate": "cd services/api && encore db migrate",
    "backend": "cd services/api && encore run",
    "frontend": "cd apps/web && pnpm dev",
    "encore:auth": "cd services/api && encore auth login",
    "encore:create": "cd services/api && encore app create seattle-reuse-exchange",
    "encore:run": "cd services/api && encore run",
    "encore:deploy": "cd services/api && encore deploy",
    "migrate:encore": "migrate-to-encore.bat"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.16",
    "prettier": "^3.0.3",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}