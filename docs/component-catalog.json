{
  "catalog": "shadcn/ui + Radix UI Components",
  "version": "1.0.0",
  "framework": "React + Next.js 14",
  "styling": "Tailwind CSS + CSS Variables",
  "accessibility": "WCAG 2.1 AA Compliant",
  "theme_support": ["light", "dark"],
  
  "components": [
    {
      "name": "Button",
      "file": "apps/web/src/components/ui/button.tsx",
      "library": "shadcn/ui",
      "primitives": ["@radix-ui/react-slot"],
      "variants": ["default", "destructive", "outline", "secondary", "ghost", "link"],
      "sizes": ["default", "sm", "lg", "icon"],
      "accessibility": {
        "keyboard_navigable": true,
        "focus_visible": true,
        "aria_support": true
      },
      "status": "implemented"
    },
    {
      "name": "Input",
      "file": "apps/web/src/components/ui/input.tsx",
      "library": "shadcn/ui",
      "primitives": ["native HTML input"],
      "features": ["form integration", "validation support"],
      "accessibility": {
        "keyboard_navigable": true,
        "label_association": true,
        "error_messages": true
      },
      "status": "implemented"
    },
    {
      "name": "Textarea",
      "file": "apps/web/src/components/ui/textarea.tsx",
      "library": "shadcn/ui",
      "primitives": ["native HTML textarea"],
      "features": ["multi-line text", "form integration"],
      "accessibility": {
        "keyboard_navigable": true,
        "label_association": true,
        "aria_support": true
      },
      "status": "implemented"
    },
    {
      "name": "Toast",
      "file": "apps/web/src/components/ui/toast.tsx",
      "library": "shadcn/ui",
      "primitives": ["@radix-ui/react-toast"],
      "variants": ["default", "destructive"],
      "features": ["auto-dismiss", "action buttons", "close button"],
      "accessibility": {
        "aria_live": true,
        "keyboard_dismissal": true,
        "screen_reader_friendly": true
      },
      "status": "implemented"
    },
    {
      "name": "Toaster",
      "file": "apps/web/src/components/ui/toaster.tsx",
      "library": "shadcn/ui",
      "primitives": ["@radix-ui/react-toast"],
      "purpose": "Toast notification container",
      "features": ["position management", "stacking"],
      "status": "implemented"
    }
  ],
  
  "planned_components": [
    {
      "name": "Dialog",
      "primitives": "@radix-ui/react-dialog",
      "use_cases": ["modals", "confirmations", "forms"],
      "priority": "high"
    },
    {
      "name": "Select",
      "primitives": "@radix-ui/react-select",
      "use_cases": ["dropdowns", "filters", "form fields"],
      "priority": "high"
    },
    {
      "name": "Checkbox",
      "primitives": "@radix-ui/react-checkbox",
      "use_cases": ["forms", "filters", "settings"],
      "priority": "medium"
    },
    {
      "name": "Dropdown Menu",
      "primitives": "@radix-ui/react-dropdown-menu",
      "use_cases": ["navigation", "actions", "context menus"],
      "priority": "medium"
    },
    {
      "name": "Tabs",
      "primitives": "@radix-ui/react-tabs",
      "use_cases": ["content organization", "navigation"],
      "priority": "medium"
    },
    {
      "name": "Table",
      "primitives": "native HTML table",
      "use_cases": ["admin dashboards", "data display"],
      "priority": "medium"
    },
    {
      "name": "Card",
      "primitives": "native HTML div",
      "use_cases": ["content containers", "auction listings"],
      "priority": "low"
    },
    {
      "name": "Form",
      "primitives": "react-hook-form",
      "use_cases": ["all form interactions", "validation"],
      "priority": "high"
    },
    {
      "name": "Tooltip",
      "primitives": "@radix-ui/react-tooltip",
      "use_cases": ["help text", "additional info"],
      "priority": "low"
    },
    {
      "name": "Sheet",
      "primitives": "@radix-ui/react-dialog",
      "use_cases": ["mobile navigation", "sidebars"],
      "priority": "medium"
    }
  ],
  
  "design_tokens": {
    "file": "apps/web/src/styles/tokens.css",
    "colors": {
      "primary": "#00B39F (Keppel)",
      "secondary": "#EBC017 (Saffron)",
      "neutral": "#3C494E (Charcoal)",
      "surface": "#0F1314 (Dark)",
      "surface_alt": "#FFFFFF (Light)",
      "accent": "#7AD8CC",
      "danger": "#D92D20",
      "success": "#22C55E",
      "warning": "#F59E0B"
    },
    "typography": {
      "headings": "Qanelas Soft, Inter, system-ui",
      "body": "Open Sans, Inter, system-ui",
      "base_size": "16px",
      "scale": 1.2
    },
    "spacing": [4, 8, 12, 16, 20, 24, 32, 40, 48],
    "border_radius": "16px",
    "shadows": {
      "sm": "0 1px 2px rgba(0,0,0,.08)",
      "md": "0 8px 24px rgba(0,0,0,.12)",
      "lg": "0 20px 50px rgba(0,0,0,.18)"
    },
    "motion": {
      "ease": "cubic-bezier(0.2, 0.8, 0.2, 1)",
      "duration": "200ms"
    }
  },
  
