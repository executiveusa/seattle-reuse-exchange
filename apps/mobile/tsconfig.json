{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": true,
    "paths": {
      "@/components/*": ["./components/*"],
      "@/hooks/*": ["./hooks/*"]
    },
    "types": ["expo-router"],
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "extends": "expo/tsconfig.base"
}
